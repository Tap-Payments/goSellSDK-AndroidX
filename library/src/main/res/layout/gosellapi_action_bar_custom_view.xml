<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alabaster"
    android:fitsSystemWindows="true"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/actionBarBackButtonContainer"
        android:layout_width="@dimen/action_bar_back_button_container_width"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/actionBarBackButton"
            android:layout_width="@dimen/action_bar_back_button_width"
            android:layout_height="@dimen/action_bar_default_height"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/btn_back"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/actionBarImage"
        android:layout_width="@dimen/icon_height_basic"
        android:layout_height="@dimen/icon_height_basic"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_basic_8dp"
        android:layout_marginLeft="@dimen/margin_basic_8dp"
        android:scaleType="center" />

    <TextView
        android:id="@+id/actionBarTitle"
        style="@style/TextView.Title.Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_basic_14dp"
        android:layout_marginLeft="@dimen/margin_basic_14dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"/>
</LinearLayout>