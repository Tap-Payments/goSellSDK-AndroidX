<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paymentSystemsViewHolderLayout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:fitsSystemWindows="true"
    android:background="@drawable/selector_payment_options_viewholder">

    <ImageView
        android:id="@+id/paymentSystemIcon"
        android:layout_width="@dimen/icon_width_small"
        android:layout_height="@dimen/icon_height_small"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_basic_23dp"
        android:layout_marginStart="@dimen/margin_basic_23dp" />

    <TextView
        android:id="@+id/paymentSystemName"
        style="@style/TextView.Title.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_basic_16dp"
        android:layout_marginTop="@dimen/margin_basic_16dp"
        android:layout_toEndOf="@id/paymentSystemIcon"
        android:layout_toRightOf="@id/paymentSystemIcon"
        android:layout_toStartOf="@+id/arrowIcon"
        android:layout_toLeftOf="@+id/arrowIcon"
        />

    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_basic_16dp"
        android:layout_marginStart="@dimen/margin_basic_16dp"
        android:background="@drawable/ic_arrow_right_normal" />
</RelativeLayout>