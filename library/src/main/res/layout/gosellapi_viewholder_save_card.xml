<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_main_section_background_shape">

        <TextView
            android:id="@+id/saveCheckoutsTitle"
            style="@style/TextView.Title.Tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_basic_16dp"
            android:layout_marginStart="@dimen/margin_basic_23dp"
            android:layout_marginLeft="@dimen/margin_basic_23dp"
            android:layout_marginTop="@dimen/margin_basic_16dp"
            android:text="@string/textview_title_save_for_merchant" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_basic_16dp"
            android:layout_marginStart="@dimen/margin_basic_16dp"
            android:layout_toEndOf="@id/saveCheckoutsTitle"
            android:layout_toRightOf="@id/saveCheckoutsTitle"
            android:theme="@style/SwitchSecondary" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_main_section_background_shape">

        <TextView
            android:id="@+id/saveGoPayCheckoutsTitle"
            style="@style/TextView.Title.Tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_basic_16dp"
            android:layout_marginStart="@dimen/margin_basic_23dp"
            android:layout_marginLeft="@dimen/margin_basic_23dp"
            android:layout_marginTop="@dimen/margin_basic_16dp"
            android:text="@string/textview_title_save_for_gopay" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_basic_16dp"
            android:layout_marginStart="@dimen/margin_basic_16dp"
            android:layout_toEndOf="@id/saveGoPayCheckoutsTitle"
            android:layout_toRightOf="@id/saveGoPayCheckoutsTitle"
            android:theme="@style/SwitchSecondary" />

    </RelativeLayout>

    <TextView
        style="@style/TextView.Disclaimer.Thin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_basic_16dp"
        android:paddingEnd="@dimen/margin_basic_23dp"
        android:paddingStart="@dimen/margin_basic_23dp"
        android:paddingTop="@dimen/margin_basic_11dp"
        android:text="@string/textview_disclaimer_go_pay_checkouts" />

    <TextView
        style="@style/TextView.Title.SectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_basic_16dp"
        android:paddingEnd="@dimen/margin_basic_29dp"
        android:paddingStart="@dimen/margin_basic_29dp"
        android:paddingTop="@dimen/margin_basic_16dp"
        android:text="@string/textview_title_personal_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_main_section_background_shape"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height_basic"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="@dimen/margin_basic_25dp"
            android:layout_marginStart="@dimen/margin_basic_25dp"
            android:layout_marginTop="@dimen/margin_basic_9dp"
            app:hintTextAppearance="@style/TextInputLayout.Hint">

            <EditText
                android:id="@+id/nameField"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edittext_hint_name" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height_basic"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="@dimen/margin_basic_25dp"
            android:layout_marginStart="@dimen/margin_basic_25dp"
            android:layout_marginTop="@dimen/margin_basic_9dp"
            app:hintTextAppearance="@style/TextInputLayout.Hint">

            <EditText
                android:id="@+id/phoneField"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edittext_hint_phone_number"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height_basic"
            android:layout_marginBottom="@dimen/margin_basic_9dp"
            android:layout_marginEnd="@dimen/margin_basic_25dp"
            android:layout_marginStart="@dimen/margin_basic_25dp"
            android:layout_marginTop="@dimen/margin_basic_9dp"
            app:hintTextAppearance="@style/TextInputLayout.Hint">

            <EditText
                android:id="@+id/email"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edittext_hint_email"
                android:inputType="textWebEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</LinearLayout>