<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="GoSellSDKAppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="actionBarStyle">@style/GoSellSDKActionBar</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/french_gray</item>
    </style>
    <!-- popup window animation-->
    <style name="popup_window_animation_phone">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>

    <style name="GoSellSDKAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/french_gray</item>

    </style>

    <style name="TransparentCompat" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/french_gray</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="GoSellSDKAppTheme_Full" parent="GoSellSDKAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/french_gray</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SecurityText">
        <item name="android:textColor">@color/security_text_color</item>
        <item name="android:textSize">@dimen/font_size_13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">@dimen/title_lineSpacingExtra_0</item>
    </style>

</resources>